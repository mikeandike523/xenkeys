{
  
  "compilerOptions": {



    
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.worklets.tsbuildinfo",
    "composite": false,
    "noEmit": true,                       // esbuild will emit; ts just type-checks if you want
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2020"],// AudioWorklet types live in DOM; worker globals in WebWorker
    "strict": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/worklets", "src/shared-types"],
}